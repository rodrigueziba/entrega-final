<!-- views/delete-post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Post</title>
    <!-- Enlaza Bootstrap CSS (asegúrate de que Bootstrap esté instalado en tu proyecto) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <!-- Enlaza tu archivo CSS personalizado -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Eliminar Post</h1>
        <div class="alert alert-danger" role="alert">
            ¿Estás seguro de que deseas eliminar este post?
        </div>
        <form action="/posts/delete/<%= post.id %>" method="POST">
            <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
            <a href="/posts" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
