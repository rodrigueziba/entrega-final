<!-- views/update-post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Post</title>
    <!-- Enlaza Bootstrap CSS (asegúrate de que Bootstrap esté instalado en tu proyecto) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <!-- Enlaza tu archivo CSS personalizado -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Editar Post</h1>
        <form action="/posts/edit/<%= post.id %>" method="POST">
            <div class="form-group">
                <label for="title">Título:</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" required>
            </div>
            <div class="form-group">
                <label for="content">Contenido:</label>
                <textarea class="form-control" id="content" name="content" rows="4" required><%= post.content %></textarea>
            </div>
            <div class="form-group">
                <label for="imageUrl">Enlace de Imagen:</label>
                <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%= post.imageUrl %>">
            </div>
            <div class="form-group">
                <label for="createdAt">Fecha de Creación:</label>
                <input type="date" class="form-control" id="createdAt" name="createdAt" value="<%= post.createdAt.toISOString().split('T')[0] %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
    </div>
</body>
</html>
