<!-- views/get-post-by-id.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del Post</title>
    <!-- Enlaza Bootstrap CSS (asegúrate de que Bootstrap esté instalado en tu proyecto) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <!-- Enlaza tu archivo CSS personalizado -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Detalle del Post</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.content %></p>
                <% if (post.imageUrl) { %>
                    <img src="<%= post.imageUrl %>" alt="Imagen del Post" class="img-fluid">
                <% } %>
                <p class="card-text">Fecha de Creación: <%= new Date(post.createdAt).toLocaleDateString() %></p>
            </div>
        </div>
    </div>
</body>
</html>
